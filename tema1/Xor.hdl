/**
 * Exclusive-or gate:
 * if ((a and Not(b)) or (Not(a) and b)) out = 1, else out = 0
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    Nand(a=a, b=b, out=nota);
    Nand(a=a, b=nota, out=notb);
    Nand(a=nota, b=b, out=nout);
    Nand(a=notb, b=nout, out=out);
}